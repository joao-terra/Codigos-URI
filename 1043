#include <stdio.h>
 
int main() {
 
    double a,b,c, p, ar;
    scanf("%lf %lf %lf",&a,&b,&c);

    if (a < b + c && b < a + c && c < a + b)
        {
        p = a + b + c;
        printf("Perimetro = %.1f\n", p);
    }
    else
    {
        ar = (a + b)*c/2;
        printf("Area = %.1f\n", ar);
    }
 
    return 0;
}
